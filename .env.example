# ============================================================================
# LumenLink Trading Bot Configuration
# ============================================================================

# --- Core Configuration ---
NODE_ENV=development
LOG_LEVEL=info
HTTP_PORT=8080

# --- Trading Settings ---
MODE=paper                              # paper | live (CAREFUL!)
EXCHANGE=coinbase                       # coinbase | binance | bybit
SYMBOLS=BTC-USD,ETH-USD                # Trading pairs (comma-separated, Coinbase format)
INTERVAL=1h                            # Candle timeframe
STRATEGY=rsi_mean_reversion            # rsi_mean_reversion | ema_crossover | composite

# --- Safety Controls ---
ALLOW_LIVE_TRADING=false               # Must be true for live mode
KILL_SWITCH=true                       # Emergency stop (blocks live orders)
POLL_INTERVAL_MS=60000                 # Strategy evaluation interval (1 minute)

# --- Secrets Provider (required for live Coinbase) ---
SECRETS_PROVIDER=op                    # op | 1password (1Password-only policy for live Coinbase)
OP_VAULT=Trading

# --- Risk Management ---
RISK_MAX_DAILY_LOSS_USD=150           # Max loss per day
RISK_MAX_POSITION_USD=250             # Max position size
RISK_MAX_OPEN_POSITIONS=3             # Max concurrent positions
RISK_COOLDOWN_MINUTES=15              # Time between failed trades

# --- Market Guards ---
GUARD_MAX_SPREAD_BPS=25               # Max spread (basis points)
GUARD_MAX_SLIPPAGE_BPS=20             # Max slippage tolerance
GUARD_MIN_VOLUME=0                    # Minimum volume filter

# --- Data Provider ---
DATA_PROVIDER=exchange                 # exchange | coingecko | cmc
DATA_POLLING_MS=30000                 # Market data refresh (30 seconds)
DATA_FAKE_FALLBACK=true               # Use fake data if exchange unavailable

# ============================================================================
# Exchange API Keys (READ + TRADE ONLY - NEVER ENABLE WITHDRAWALS!)
# ============================================================================

# --- Binance ---
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_secret_here

# --- Coinbase Advanced Trade (CDP JWT only) ---
# Resolved from 1Password mapped item: "LumenLink API - Coinbase-ECDSA"
# Keep these empty unless you intentionally override with direct values.
# API key format must be: organizations/{org_id}/apiKeys/{key_id}
COINBASE_API_KEY=
# PEM private key (BEGIN PRIVATE KEY or BEGIN EC PRIVATE KEY)
COINBASE_API_SECRET=
# Optional / ignored for CDP JWT (legacy HMAC is not used)
COINBASE_API_PASSPHRASE=

# --- Bybit ---
BYBIT_API_KEY=your_bybit_api_key_here
BYBIT_API_SECRET=your_bybit_secret_here

# ============================================================================
# Market Data & Analysis APIs
# ============================================================================

# --- CoinGecko ---
COINGECKO_API_KEY=your_coingecko_api_key_here

# --- CoinMarketCap ---
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here

# --- TwelveData ---
TWELVEDATA_API_KEY=your_twelvedata_api_key_here

# --- CryptoPanic News ---
CRYPTOPANIC_API_KEY=your_cryptopanic_api_key_here

# --- NewsAPI ---
NEWS_API_KEY=your_news_api_key_here

# --- Whale Alert ---
WHALE_ALERT_API_KEY=your_whale_alert_api_key_here

# --- OpenAI (for sentiment analysis) ---
OPENAI_API_KEY=your_openai_api_key_here

# --- Blockchain Scanners ---
ETHERSCAN_API_KEY=your_etherscan_api_key_here
BSCSCAN_API_KEY=your_bscscan_api_key_here

# ============================================================================
# Notifications & Alerts
# ============================================================================

# --- Telegram ---
ALERT_TELEGRAM_ENABLED=true
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# --- Discord ---
ALERT_DISCORD_ENABLED=false
DISCORD_WEBHOOK_URL=your_discord_webhook_here

# ============================================================================
# AWS Secrets Manager (Production)
# ============================================================================

# --- AWS Configuration ---
USE_AWS_SECRETS_MANAGER=false
AWS_REGION=us-east-1

# --- Secret IDs (if using AWS Secrets Manager) ---
SECRET_ID_COINBASE_KEY=prod/trading/coinbase/key
SECRET_ID_COINBASE_SECRET=prod/trading/coinbase/secret
SECRET_ID_COINBASE_PASSPHRASE=prod/trading/coinbase/passphrase
SECRET_ID_BINANCE_KEY=prod/trading/binance/key
SECRET_ID_BINANCE_SECRET=prod/trading/binance/secret
SECRET_ID_TELEGRAM_TOKEN=prod/alerts/telegram/token
SECRET_ID_DISCORD_WEBHOOK=prod/alerts/discord/webhook

